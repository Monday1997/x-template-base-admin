{
    "name": "admin-template",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "lint": "eslint  --cache --fix  --ext .js,.ts,.vue,.jsx,.tsx src --rule \"simple-import-sort/imports: off\" --rule \"simple-import-sort/exports: off\"",
        "lint:style": "npx stylelint --cache \"src/**/*.{js,jsx,vue,less,scss,css}\" --fix",
        "format": "prettier --write src/",
        "lint:all": "npm run lint && npm run lint:style && npm run lint:fn"
    },
    "dependencies": {
        "pinia": "^3.0.3",
        "vue": "^3.5.17",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^22.15.32",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vitejs/plugin-vue-jsx": "^5.0.0",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.5.1",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-vue": "~10.2.0",
        "jiti": "^2.4.2",
        "npm-run-all2": "^8.0.4",
        "postcss-html": "^1.8.0",
        "prettier": "3.5.3",
        "stylelint": "^16.21.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^38.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
        "stylelint-order": "^7.0.0",
        "typescript": "~5.8.0",
        "vite": "^7.0.0",
        "vue-tsc": "^2.2.10"
    }
}
